# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Get from: Telegram @BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Get from: Telegram @userinfobot (comma-separated for multiple users)
ALLOWED_USER_IDS=123456789

# Model config
DEFAULT_MODEL=claude-sonnet-4-6
COMPLEX_MODEL=claude-opus-4-6
# ENABLE_THINKING=true

# Execution limits
EXECUTION_TIMEOUT=60
# MAX_CODE_EXECUTION_TIMEOUT=600
# LONG_TIMEOUT=900
MAX_RETRIES=3
MAX_FILE_SIZE_MB=50

# Resource guards
# MAX_CONCURRENT_TASKS=3
# RAM_THRESHOLD_PERCENT=90

# Budget limits (0 = unlimited)
# DAILY_BUDGET_USD=0
# MONTHLY_BUDGET_USD=0

# Ollama (local AI, optional)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_DEFAULT_MODEL=llama3.1:8b

# Big data threshold
# BIG_DATA_ROW_THRESHOLD=500

# Docker sandbox (optional, for isolated code execution)
# DOCKER_ENABLED=false
# DOCKER_MEMORY_LIMIT=2g
# DOCKER_CPU_LIMIT=2
# DOCKER_NETWORK=bridge
